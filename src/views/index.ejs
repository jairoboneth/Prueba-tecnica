<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%- include ('partials/head')%>
</head>

<body>
    <form action="/contact/add" method="POST">
        <div class="container">
            <div class="row">
                <h1>contact us</h1>
            </div>
            <div class="row">
                <h4 style="text-align:center">We'd love to hear from you!</h4>
            </div>
            <div class="row input-container">
                <div class="col-xs-12">
                    <div class="styled-input wide">
                        <input type="text" name="name"  />
                        <label>Nombre</label>
                    </div>
                    <div class="styled-input wide">
                        <input type="text" name="Apellido" required />
                        <label>Apellido</label>
                    </div>
                </div>
                <div class="col-xs-12">
                    <select class="style-select wide" name="pais">
                        <% data.forEach (element=>{ %>
                            <option value="<%= element %>">
                                <%= element %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="styled-input">
                        <input type="text" name="email" required />
                        <label>Email</label>
                    </div>
                </div>
                <div class="col-md-6 col-sm-12">
                    <div class="styled-input" style="float:right;">
                        <input type="text" name="celular" required />
                        <label>Phone Number</label>
                    </div>
                </div>
                <div class="col-xs-12">
                    <button type="submit" class="btn-lrg submit-btn">Submit</button>
                </div>
            </div>
        </div>

    </form>
    <% if(typeof errors !='undefined' ) { %>
        <% errors.forEach( (validacion)=> { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>
                    <%= validacion.msg %>
                </strong> You should check in on some of those fields below.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>

            <% }) %>
                <% } %>

                <% if(typeof mensajeExito !='undefined' ) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>
                            <%= mensajeExito %>
                        </strong> 
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    
                    <% } %>
</body>

</html>